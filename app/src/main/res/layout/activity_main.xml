<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/d_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:text="D - 146.83"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/e_low_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:text="E - 82.41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_button" />

    <Button
        android:id="@+id/a_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:text="A - 110.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_button" />

    <Button
        android:id="@+id/e_high_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:text="E - 329.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:text="B - 246.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_high_button" />

    <Button
        android:id="@+id/g_button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="6dp"
        android:text="G - 196.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_button" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guitarplaceholder" />

</androidx.constraintlayout.widget.ConstraintLayout>